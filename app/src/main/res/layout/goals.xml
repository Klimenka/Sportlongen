<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal"
    android:weightSum="3">

    <ImageView
        android:id="@+id/goalsImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/goalsTimesAWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_weight="1"
        android:textAppearance="@style/Roboto16Regular" />

    <TextView
        android:id="@+id/goalsRedLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:textAppearance="@style/Roboto20RegularRed" />

    <ImageView
        android:id="@+id/goalsYesImage"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="25dp"
        android:layout_weight="1"
        android:visibility="gone"
        app:srcCompat="@drawable/yes" />
</LinearLayout>
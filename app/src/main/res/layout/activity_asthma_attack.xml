<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".AsthmaAttackActivity">

            <ImageView
                android:id="@+id/exclamIcon"
                android:layout_width="67dp"
                android:layout_height="63dp"
                android:layout_marginTop="25dp"
                android:contentDescription="@string/attention_image"
                android:src="@drawable/exclamation"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sufferingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/suffering"
                android:textAppearance="@style/Roboto16Regular"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exclamIcon" />

            <TextView
                android:id="@+id/remainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/remain_calm"
                android:textAppearance="@style/Roboto20BoldGrey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sufferingText" />

            <ImageView
                android:id="@+id/asthma_line1"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/line"
                android:scaleType="centerCrop"
                android:src="@drawable/line_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/remainText" />

            <ImageView
                android:id="@+id/womanIcon"
                android:layout_width="80dp"
                android:layout_height="91dp"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/sitting_woman"
                android:src="@drawable/woman"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asthma_line1" />

            <TextView
                android:id="@+id/sitUprightText"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/sit_upright"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto16RegularGrey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/womanIcon" />

            <ImageView
                android:id="@+id/asthma_line2"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/line"
                android:scaleType="centerCrop"
                android:src="@drawable/line_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sitUprightText" />

            <ImageView
                android:id="@+id/inhaler_icon_attack"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/use_inhaler_image"
                android:src="@drawable/inhaler_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asthma_line2" />

            <TextView
                android:id="@+id/reachText"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/reach"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto16RegularGrey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inhaler_icon_attack" />

            <ImageView
                android:id="@+id/asthma_line3"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/line"
                android:scaleType="centerCrop"
                android:src="@drawable/line_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reachText" />

            <TextView
                android:id="@+id/ifYouDoNotFeelText"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/if_you_do_not"
                android:textAlignment="center"
                android:textAppearance="@style/Roboto16RegularGrey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/asthma_line3" />

            <TextView
                android:id="@+id/callEmergencyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/call_emergency"
                android:textAppearance="@style/Roboto16RegularRed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ifYouDoNotFeelText" />

            <ImageView
                android:id="@+id/asthma_line4"
                android:layout_width="90dp"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/line"
                android:scaleType="centerCrop"
                android:src="@drawable/line_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/callEmergencyText" />

            <ImageView
                android:id="@+id/continueAsthmaButton"
                android:layout_width="204dp"
                android:layout_height="36dp"
                android:layout_marginTop="30dp"
                android:contentDescription="@string/ok_button"
                android:scaleType="centerCrop"
                android:src="@drawable/continue_understand"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/callEmergencyText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/loading_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone" />
    </RelativeLayout>
</ScrollView>
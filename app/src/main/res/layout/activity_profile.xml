<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="60dp">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/myImageView"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:src="@drawable/profile_top" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/myImageView"
                    android:layout_alignTop="@id/myImageView"
                    android:layout_alignEnd="@id/myImageView"
                    android:layout_alignBottom="@id/myImageView"
                    android:layout_marginTop="30dp"
                    android:textAppearance="@style/Roboto20BoldWhite" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/myImageView"
                    android:layout_alignTop="@id/myImageView"
                    android:layout_alignEnd="@id/myImageView"
                    android:layout_alignBottom="@id/myImageView"
                    android:layout_marginTop="80dp"
                    android:textAppearance="@style/Roboto14White" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card1"

                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone">
                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="23dp"
                    android:text="@string/account"
                    android:textAppearance="@style/Roboto16Bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card2"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone">
                <TextView
                    android:id="@+id/settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="23dp"
                    android:text="@string/settings_profile"
                    android:textAppearance="@style/Roboto16Bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card3"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="23dp"
                    android:text="@string/tips_and_tricks"
                    android:textAppearance="@style/Roboto16Bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card4"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone">
                <TextView
                    android:id="@+id/care_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="23dp"
                    android:text="@string/care_provider_profile"
                    android:textAppearance="@style/Roboto16Bold"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/profile_card5"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="3dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="23dp"
                    android:text="@string/logout"
                    android:textAppearance="@style/Roboto16Bold"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


</RelativeLayout>
</ScrollView>
    <include layout="@layout/activity_base"/>
</FrameLayout>